#!/usr/bin/env node

var resjs = require('../dist/index.js')
require('commander')
    .version(require('../package').version)
    .description('generate res.js for browser or nodejs')
    .arguments('<url> [dest]')
    .option('-p, --prefix [prefix]', 'urlPrefix of generated res.js')
    .option('-n, --node [node]', 'generate res.js for nodejs, default for browser')
    .option('-m, --min [min]', 'minimize generated res.js, default not minimize')
    .action(function(url, dest, options) {
        return resjs(url, dest, options.prefix, options.node, options.min)
    }).parse(process.argv);
